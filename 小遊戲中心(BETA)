<script>
const menu=menuEl=menu,game=gameEl=game,content=contentEl=content,title=titleEl=title
let timer,ctx,interval

function openGame(t){
menu.classList.add('hidden')
game.classList.remove('hidden')
content.innerHTML=''
clearInterval(interval);clearInterval(timer)
if(t==='guess')guess()
if(t==='rps')rps()
if(t==='click')clickGame()
if(t==='whack')whack()
if(t==='brick')brick()
if(t==='snake')snake()
}
function back(){
clearInterval(interval);clearInterval(timer)
game.classList.add('hidden')
menu.classList.remove('hidden')
}

/* ğŸ¯ çŒœæ•¸å­— */
function guess(){
title.innerText='ğŸ¯ çŒœæ•¸å­—'
let n=Math.floor(Math.random()*100)+1
content.innerHTML=`
<input id=g type=number class="text-black p-2">
<button class=btn onclick="
let v=Number(g.value);
alert(v==n?'ğŸ‰ å°äº†':v<n?'å¤ªå°':'å¤ªå¤§')
">çŒœ</button>`
}

/* âœŠâœ‹âœŒï¸ å‰ªåˆ€çŸ³é ­å¸ƒ */
function rps(){
title.innerText='âœŠâœ‹âœŒï¸ å‰ªåˆ€çŸ³é ­å¸ƒ'
content.innerHTML=`
<button class=btn onclick="play('å‰ªåˆ€')">å‰ªåˆ€</button>
<button class=btn onclick="play('çŸ³é ­')">çŸ³é ­</button>
<button class=btn onclick="play('å¸ƒ')">å¸ƒ</button>
<div id=r class=mt-4></div>`
window.play=(me)=>{
let a=['å‰ªåˆ€','çŸ³é ­','å¸ƒ']
let ai=a[Math.floor(Math.random()*3)]
r.innerText=`ä½ ï¼š${me}ï½œé›»è…¦ï¼š${ai}`
}
}

/* âš¡ é»æ“Šæ¸¬é€Ÿ */
function clickGame(){
title.innerText='âš¡ é»æ“Šæ¸¬é€Ÿï¼ˆ5 ç§’ï¼‰'
let c=0,t=5
content.innerHTML=`<div id=t>5</div><button class=btn id=b>é»</button><div id=r></div>`
timer=setInterval(()=>{t--;tEl.textContent=t;if(t<=0){clearInterval(timer);b.disabled=true;r.textContent='å…± '+c+' ä¸‹'}},1000)
b.onclick=()=>c++
}

/* ğŸ¹ æ‰“åœ°é¼  */
function whack(){
title.innerText='ğŸ¹ æ‰“åœ°é¼ ï¼ˆ40 ç§’ï¼‰'
let score=0,time=40
content.innerHTML=`<div id=t>40</div><div id=grid class="grid grid-cols-3 gap-2"></div><div>åˆ†æ•¸ï¼š<span id=s>0</span></div>`
for(let i=0;i<9;i++){
let d=document.createElement('button')
d.textContent='ğŸŒ±'
d.className='btn'
d.onclick=()=>{if(d.textContent==='ğŸ¹'){score++;s.textContent=score;d.textContent='ğŸŒ±'}}
grid.appendChild(d)
}
timer=setInterval(()=>{
time--;t.textContent=time
let cells=[...grid.children]
cells.forEach(c=>c.textContent='ğŸŒ±')
cells[Math.floor(Math.random()*9)].textContent='ğŸ¹'
if(time<=0)clearInterval(timer)
},1000)
}

/* ğŸ§± æ‰“ç£šå¡Š */
function brick(){
title.innerText='ğŸ§± æ‰“ç£šå¡Š'
content.innerHTML='<canvas id=c width=300 height=200></canvas>'
ctx=c.getContext('2d')
let x=150,y=150,dx=2,dy=-2,p=120
let bricks=Array.from({length:5},(_,i)=>({x:i*60,y:20,hit:false}))
document.onmousemove=e=>p=e.clientX-150
interval=setInterval(()=>{
ctx.clearRect(0,0,300,200)
ctx.fillRect(p,190,60,8)
x+=dx;y+=dy
if(x<0||x>300)dx*=-1
if(y<0)dy*=-1
if(y>200)alert('Game Over'),clearInterval(interval)
bricks.forEach(b=>{
if(!b.hit){
ctx.fillRect(b.x,b.y,50,10)
if(x>b.x&&x<b.x+50&&y>b.y&&y<b.y+10){dy*=-1;b.hit=true}
}})
ctx.beginPath();ctx.arc(x,y,5,0,7);ctx.fill()
},16)
}

/* ğŸ è²ªåƒè›‡ */
function snake(){
title.innerText='ğŸ è²ªåƒè›‡'
content.innerHTML='<canvas id=c width=300 height=300></canvas>'
ctx=c.getContext('2d')
let s=[[10,10]],d=[1,0],f=[5,5]
document.onkeydown=e=>{
if(e.key==='ArrowUp')d=[0,-1]
if(e.key==='ArrowDown')d=[0,1]
if(e.key==='ArrowLeft')d=[-1,0]
if(e.key==='ArrowRight')d=[1,0]
}
interval=setInterval(()=>{
let h=[s[0][0]+d[0],s[0][1]+d[1]]
if(h[0]<0||h[1]<0||h[0]>29||h[1]>29)alert('Game Over'),clearInterval(interval)
s.unshift(h)
if(h[0]==f[0]&&h[1]==f[1])f=[Math.random()*30|0,Math.random()*30|0]
else s.pop()
ctx.clearRect(0,0,300,300)
ctx.fillRect(f[0]*10,f[1]*10,10,10)
s.forEach(p=>ctx.fillRect(p[0]*10,p[1]*10,10,10))
},100)
}
